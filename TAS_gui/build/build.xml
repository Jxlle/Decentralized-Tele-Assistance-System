<?xml version="1.0" encoding="UTF-8"?>
	<project name="TAS_gui" default="do-deploy" basedir="."  xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="${java.home}\..\lib\ant-javafx.jar"/>
				<file name="${java.home}\lib\jfxrt.jar"/>
			</filelist>
		</path>
	
		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml"      
			uri="javafx:com.sun.javafx.tools.ant"
			classpathref="fxant"/>
	</target>
	<target name="setup-staging-area">
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />
		
		<mkdir dir="externalLibs" />
		
		<copy todir="externalLibs">
			<fileset dir="/Users/ryf/Desktop/TAS/TAS_NoAdaptation/TeleAssistanceSystem/libs">
				<filename name="xstream-1.5.0.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/ryf/Dropbox/SEAMS2015/RSP/RSP.v3.3.src/TAS_gui/libs">
				<filename name="itext-pdfa-5.5.5.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/ryf/Dropbox/SEAMS2015/RSP/RSP.v3.3.src/TAS_gui/libs">
				<filename name="itextpdf-5.5.5.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/ryf/Dropbox/SEAMS2015/RSP/RSP.v3.3.src/TAS_gui/libs">
				<filename name="antlrworks-1.5.2-complete.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/ryf/Desktop/TAS/TAS_NoAdaptation/TeleAssistanceSystem/libs">
				<filename name="javax.jms-api-2.0.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/ryf/Dropbox/Architectures for Service-based Systems/RSP/required-libs">
				<filename name="antlrworks-1.5.2-complete.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/ryf/Dropbox/SEAMS2015/RSP/RSP.v3.3.src/TAS_gui/libs">
				<filename name="itext-xtra-5.5.5.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/ryf/Desktop/TAS/TAS_NoAdaptation/TeleAssistanceSystem/libs">
				<filename name="antlrworks-1.5.2-complete.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/ryf/Desktop/TAS/TeleAssistanceSystem/libs">
				<filename name="xstream-1.5.0.jar"/>	
			</fileset>
		</copy>
		
		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="/Users/ryf/Desktop/TAS/TAS_NoAdaptation/TAS_gui">
				<include name="src/**" />
			</fileset>
		</copy>
		
		<mkdir dir="projectRefs" />
		<copy todir="projectRefs">
			<fileset dir="/Users/ryf/Documents/github/RSP">
				<include name="ResearchServicePlatform/src/**" />
			</fileset>
		</copy>
		<copy todir="projectRefs">
			<fileset dir="/Users/ryf/Desktop/TAS/TAS_NoAdaptation">
				<include name="TeleAssistanceSystem/src/**" />
			</fileset>
		</copy>
		<copy todir="projectRefs">
			<fileset dir="/Users/ryf/Desktop/TAS/TAS_NoAdaptation">
				<include name="TeleAssistanceSystem/resources/**" />
			</fileset>
		</copy>
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
	
		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="itextpdf-5.5.5.jar"/>
				<include name="itext-pdfa-5.5.5.jar"/>
				<include name="javax.jms-api-2.0.jar"/>
				<include name="antlrworks-1.5.2-complete.jar"/>
				<include name="xstream-1.5.0.jar"/>
				<include name="itext-xtra-5.5.5.jar"/>
			</fileset>
		</copy>
	
		<!-- Copy project references -->
		<copy todir="build/src">
			<fileset dir="projectRefs/TeleAssistanceSystem/src">
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="build/src">
			<fileset dir="projectRefs/ResearchServicePlatform/src">
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="build/src">
			<fileset dir="projectRefs/TeleAssistanceSystem/resources">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="UTF-8">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
			</classpath>
		</javac>
		
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>
	
		<copy todir="build/classes">
			<fileset dir="projectRefs/TeleAssistanceSystem/src">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
		<copy todir="build/classes">
			<fileset dir="projectRefs/ResearchServicePlatform/src">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
		<copy todir="build/classes">
			<fileset dir="projectRefs/TeleAssistanceSystem/resources">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
		
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
		
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
		
		
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="TAS_gui.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
		</fx:resources> 
		
		<fx:application id="fxApplication"
			name="TAS_gui"
			mainClass="application.MainGui"
		/>
	
		<mkdir dir="build/classes/META-INF" />
		
		
		
		<fx:jar destfile="dist/TAS_gui.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
			
			<manifest>
				<attribute name="Implementation-Vendor" value=""/>
				<attribute name="Implementation-Title" value="TAS_gui"/>
				<attribute name="Implementation-Version" value="1.0.0"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
		
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="false"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="TAS_gui" nativeBundles="none"
			updatemode="background" >
	
			<fx:info title="TAS_gui" vendor=""/>
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
		</fx:deploy>
		
		
	</target>
</project>
